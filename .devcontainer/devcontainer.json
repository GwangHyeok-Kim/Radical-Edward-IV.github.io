{
  "name": "blog",

  "forwardPorts": [4000],

  "remoteUser": "vscode",

  "customizations": {
    "vscode": {

      "settings": {},

      "extensions": [
        "rebornix.ruby",
        "vscodevim.vim",
        "christian-kohler.path-intellisense",
        "pkief.material-icon-theme",
        "esbenp.prettier-vscode"
      ]
    }
  },

  "image": "mcr.microsoft.com/devcontainers/ruby:dev-3.2",

  "runArgs": ["--name", "blog"],

  "postCreateCommand": "apt-get update && gem install jekyll bundler"
}